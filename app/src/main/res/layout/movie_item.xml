<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dimen_8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_22sp"
            android:textStyle="bold"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            />

        <TextView
            android:id="@+id/movie_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            />

        <TextView
            android:id="@+id/movie_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_popularity"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            />

        <TextView
            android:id="@+id/movie_original_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_vote"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18sp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingEnd="@dimen/dimen_16dp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_original_language"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18sp"
                android:paddingLeft="@dimen/dimen_16dp"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingTop="@dimen/dimen_1dp"
                android:paddingRight="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>