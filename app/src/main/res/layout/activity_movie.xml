<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aditya.chalchitra.activities.MovieActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_poster"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        />

    <TextView
        android:id="@+id/movie_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        />

    <TextView
        android:id="@+id/movie_popularity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_date"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_popularity"
        android:textColor="@color/white"
        android:textSize="@dimen/text_20sp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        />

    <!--<VideoView-->
        <!--android:id="@+id/video_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dimen_240dp"-->
        <!--android:layout_below="@+id/movie_overview"-->
        <!--/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/dimen_260dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_below="@+id/movie_overview"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/dimen_8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginBottom="@dimen/dimen_80dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="WATCH TRAILER"
                android:textColor="@color/white"
                android:textSize="@dimen/text_22sp"
                android:textStyle="bold"
                android:gravity="center"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dimen_48dp"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/colorPrimary"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="Comment"
                android:textSize="@dimen/text_22sp"
                android:textStyle="bold"
                android:gravity="center"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>
